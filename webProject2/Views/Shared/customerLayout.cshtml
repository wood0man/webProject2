<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - webProject2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/webProject2.styles.css" asp-append-version="true" />
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
</head>
<body>
    <header>
        <!-- navbar-->
        <nav class="navbar navbar-expand-sm bg-dark top">
            <ul class="navbar-nav">
                <!--links to the other pages-->
                

                <li class="nav-item">
                    <img src="https://cdn.dribbble.com/users/4040384/screenshots/11676991/logos_2_4x.png" width="50px" />
                </li>

                <li class="nav-item"><a asp-controller="Home" asp-action="customerPage" class="nav-link">Home</a></li>
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="ourproducts" class="nav-link">Our products</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="orders" asp-action="buy" class="nav-link">Buy</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="items" asp-action="search" class="nav-link">Search product</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="mypurchase" class="nav-link">myPurchases</a>
                </li>
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="logout" class="nav-link">log out</a>
                </li>
            </ul>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
