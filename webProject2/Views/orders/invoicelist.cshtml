@model IEnumerable<webProject2.Models.selectedUserid>

@{
    ViewData["Title"] = "invoicelist";
}

<h1>invoicelist</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<select class="form-control" >
    <option value="">select a catagory</option>
    @foreach (selectedUserid userid in Model)
    {
        <option value="@userid.userid"> @userid.userid  </option>
    }
</select>


<script>
    async function gettitle() {
        var Id = document.getElementById('id').value;
        var response = await fetch('/APIOrders/' + Id);
        let x = await response.json();
        var dd = "<option> Please select</option>";
        for (i = 0; i < x.length; i++) {
            dd += "<option>" + x[i].title + "</option>";
        }
        document.getElementById("ti").innerHTML = dd;
    }
</script>





<table id="ti" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.userid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.itemid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.buyDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.userid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.itemid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.buyDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
