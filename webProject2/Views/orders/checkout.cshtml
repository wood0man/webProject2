@model IEnumerable<webProject2.Models.cart>
@{
    Layout = "~/Views/Shared/customerLayout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Purchase</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        #video {
           
            float: left;
        }

        #buyDiv {
            margin-top: 300px;
            float: left;
            background-color: rgba(169, 169, 169, 0.644);
            text-align: center;
            padding: auto;
        }

       

        body {
            background-image: url(https://images.pexels.com/photos/2908984/pexels-photo-2908984.jpeg?cs=srgb&dl=pexels-stanislav-kondratiev-2908984.jpg&fm=jpg);
            background-repeat: no-repeat;
            background-size: cover;
        }

        #totalPurchase {
            font-family: "Franklin Gothic Medium", "Arial Narrow", Arial, sans-serif;
        }
        
        .table{
        font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
        background-color: white}
    </style>
</head>
<body>
   <div id="centerDiv">
    <form asp-action="checkout" id="form">
        <input type="hidden" name="userid"  asp-for="@Model.FirstOrDefault().userid"/>
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <video autoplay
                           muted
                           id="video"
                           width="500px"
                           src="~/images/money_transfer_-_49049 (720p).mp4">
                     </video>

                        
                    
                    <br />
                    <table class="table">
                        <thead style="color:white;">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.userid)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.itemid)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.quantity)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody style="color:white">
                    @foreach(cart cart in Model)
                    
                    {
                        
                        
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => cart.userid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => cart.itemid)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => cart.name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => cart.quantity)
                            </td>
                            <td>
                                
                                <a asp-controller="items" asp-action="Details" asp-route-id="@cart.itemid">Details</a> |
                                <a asp-action="deleteFromCart" asp-route-id="@cart.Id">Delete</a>
                            </td>
                        </tr>
                    
                    
                    }
                    </tbody></table>
                    <button class="btn btn-success" type="submit" >
                        purchase
                    </button>
                
            </div>
        </div>
        </div>
    </form>
    </div>
</body>
<script>
    window.alert("your total price is "+ @ViewData["amount"])

</script>
</html>
